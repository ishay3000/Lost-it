<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/hs_parent_layout"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/hs_cardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/hs_card_lin_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--profile pic-->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/hs_imgProfilePic"
                        android:src="@drawable/ishay_1"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginRight="10dp"
                        />
                    <!--end profile pic-->

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/hs_imgBadgePic"
                            android:src="@drawable/ic_crown"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />

                        <!--name-->
                        <TextView
                            android:id="@+id/hs_tvPersonName"
                            android:text="Ishay Muchtar"
                            android:textSize="25sp"
                            android:textStyle="italic|bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <!--end name-->

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="0dp"
                    />

                <!--Content-->
                <TextView
                    android:id="@+id/hs_tvUserFounds"
                    android:textSize="25sp"
                    android:textColor="#cc011c28"
                    android:text="Founds:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/hs_tvUserLosts"
                    android:text="Losts:"
                    android:textSize="25sp"
                    android:textColor="#cc011c28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--End Content-->

            </LinearLayout>

        </ScrollView>


    </android.support.v7.widget.CardView>

</RelativeLayout>